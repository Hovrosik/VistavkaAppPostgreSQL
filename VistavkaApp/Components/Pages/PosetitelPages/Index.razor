@page "/posetitels"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using VistavkaApp.Data
@using VistavkaApp.Data
@implements IAsyncDisposable
@inject IDbContextFactory<VistavkaApp.Data.ApplicationDbContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Посетители</h1>

<p>
    <a href="posetitels/create">Создать</a>
</p>

<QuickGrid Class="table" Items="context.Posetitels">
    <PropertyColumn Property="posetitel => posetitel.PosetitelSurname" Title="Фамилия"/>
    <PropertyColumn Property="posetitel => posetitel.PosetitelName" Title="Имя" />
    <PropertyColumn Property="posetitel => posetitel.DateOfBirth" Title="Дата рождения" />
    <PropertyColumn Property="posetitel => posetitel.PhoneNumber" Title="Номер телефона" />
    <PropertyColumn Property="posetitel => posetitel.Email" Title="Почта" />

    <TemplateColumn Context="posetitel">
        <a href="@($"bilets?id={posetitel.PosetitelId}&op=2")">Привязанные билеты</a> |
        <a href="@($"posetitels/edit?posetitelid={posetitel.PosetitelId}")">Редактировать</a> |
        <a href="@($"posetitels/details?posetitelid={posetitel.PosetitelId}")">Просмотр</a> |
        <a href="@($"posetitels/delete?posetitelid={posetitel.PosetitelId}")">Удалить</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
